<gconfentryfile>

  <entrylist base="/apps/seahorse">

    <entry>
      <key>applet/display_decrypted_clipboard</key>
      <value>
        <bool>true</bool>
      </value>
    </entry>

    <entry>
      <key>applet/display_encrypted_clipboard</key>
      <value>
        <bool>true</bool>
      </value>
    </entry>

    <entry>
      <key>applet/show_clipboard_state</key>
      <value>
        <bool>true</bool>
      </value>
    </entry>

    <entry>
      <key>listing/sort_by</key>
      <value>
	<string>name</string>
      </value>
    </entry>

    <entry>
      <key>listing/show_validity</key>
      <value>
	<bool>true</bool>
      </value>
    </entry>

  </entrylist>

</gconfentryfile>
