#! /bin/sh

LANGUAGE="`echo ${LANG} | head -c 2`"

### Nautilus wipe script

case "${LANGUAGE}" in
   es)
      NAME="Eliminar_de_forma_segura"
      ;;
   fr)
      NAME="Effacer_definitivement"
      ;;
   *)
      NAME="Securely_erase"
      ;;
esac

if [ -x "/usr/local/bin/nautilus-wipe.${LANGUAGE}" ]; then
   TARGET="/usr/local/bin/nautilus-wipe.${LANGUAGE}"
else
   TARGET="/usr/local/bin/nautilus-wipe"
fi

ln -s "${TARGET}" "${HOME}/.gnome2/nautilus-scripts/${NAME}"

### Scroogle

if [ -r "/usr/share/amnesia/searchplugins/scroogle-ssl-${LANGUAGE}.xml" ]; then
   cp "/usr/share/amnesia/searchplugins/scroogle-ssl-${LANGUAGE}.xml" \
      "${HOME}/.mozilla/firefox/hexybcy0.default/searchplugins/"
fi
