#!/bin/sh

. /usr/local/lib/tails-shell-library/tor.sh

ask_for_confirmation() {
    #XXX gettextize
    zenity --question --title="Launch iceweasel before Tor is ready?" \
        --text="Tor is not ready yet. You'll not be able to browse on the Internet. Launch the browser anyway?"
}

if [ $(tor_bootstrap_progress) -eq 100 ] || ask_for_confirmation; then
    /usr/bin/iceweasel "$@"
fi
