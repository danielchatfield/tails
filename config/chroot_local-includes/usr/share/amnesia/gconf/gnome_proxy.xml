<gconfentryfile>

  <!-- /system/http_proxy -->

  <entrylist base="/system/http_proxy">

    <entry>
      <key>use_http_proxy</key>
      <value>
        <bool>true</bool>
      </value>
    </entry>

    <entry>
      <key>use_same_proxy</key>
      <value>
        <bool>false</bool>
      </value>
    </entry>

    <entry>
      <key>host</key>
      <value>
        <string>127.0.0.1</string>
      </value>
    </entry>

    <entry>
      <key>port</key>
      <value>
        <int>8118</int>
      </value>
    </entry>

    <entry>
      <key>use_authentication</key>
      <value>
        <bool>false</bool>
      </value>
    </entry>

    <entry>
      <key>ignore_hosts</key>
      <value>
	<list type="string">
	  <value>
	    <string>localhost</string>
	  </value>
	  <value>
	    <string>127.0.0.0/8</string>
	  </value>
	  <value>
	    <string>192.168.0.0/16</string>
	  </value>
	  <value>
	    <string>10.0.0.0/8</string>
	  </value>
	  <value>
	    <string>172.16.0.0/12</string>
	  </value>
	  <value>
	    <string>*.local</string>
	  </value>
	</list>
      </value>
    </entry>

  </entrylist>

  <!-- /system/proxy -->

  <entrylist base="/system/proxy">

    <entry>
      <key>mode</key>
      <value>
        <string>manual</string>
      </value>
    </entry>

    <entry>
      <key>secure_host</key>
      <value>
        <string>127.0.0.1</string>
      </value>
    </entry>

    <entry>
      <key>secure_port</key>
      <value>
        <int>8118</int>
      </value>
    </entry>

    <entry>
      <key>ftp_host</key>
      <value>
        <string>127.0.0.1</string>
      </value>
    </entry>

    <entry>
      <key>ftp_port</key>
      <value>
        <int>9050</int>
      </value>
    </entry>

    <entry>
      <key>socks_host</key>
      <value>
        <string>127.0.0.1</string>
      </value>
    </entry>

    <entry>
      <key>socks_port</key>
      <value>
        <int>9050</int>
      </value>
    </entry>

  </entrylist>

</gconfentryfile>
