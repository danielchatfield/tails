<gconfentryfile>

  <entrylist base="/apps/gksu">

    <entry>
      <key>sudo-mode</key>
      <value>
	<bool>true</bool>
      </value>
    </entry>

    <entry>
      <key>display-no-pass-info</key>
      <value>
	<bool>false</bool>
      </value>
    </entry>

    <entry>
      <key>save-to-keyring</key>
      <value>
	<bool>true</bool>
      </value>
    </entry>

  </entrylist>

</gconfentryfile>
